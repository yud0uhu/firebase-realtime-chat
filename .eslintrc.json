{
  "ignorePatterns": [
    "**/.next/**",
    "**/_next/**",
    "**/dist/**",
    "**/storybook-static/**",
    "**/lib/**"
  ],
  "plugins": ["tailwindcss"],

  "extends": ["next/core-web-vitals", "prettier", "plugin:tailwindcss/recommended"],
  "rules": {
    "react/jsx-sort-props": [
      "error",
      {
        "callbacksLast": true,
        "shorthandLast": true
      }
    ],
    "import/order": "error"
  }
}
